<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurant"
    android:orientation="vertical"
    android:adjustViewBounds="true"
    android:id="@+id/linear_layout"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="39dp"
            android:id="@+id/imageButton2"
            android:background="#000e556e"
            android:src="@mipmap/ic_back_button"
            android:layout_weight="0.06"
            android:layout_marginLeft="150dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="39dp"
            android:id="@+id/imageButton"
            android:layout_weight="0.06"
            android:onClick="settingsScreen"
            android:src="@mipmap/setting1"
            android:background="#000e556e" />

    </LinearLayout>

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/contentbar"/>

    <TextView android:text="@string/restaurant" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/Miles"
        android:layout_alignEnd="@+id/DistanceBar"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/distance"
        android:id="@+id/Distance"
        android:textSize="14pt"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="0dp" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/DistanceBar"
        android:indeterminate="false"
        android:layout_above="@+id/Miles"
        android:layout_alignStart="@+id/btnShowLocation"
        android:layout_below="@+id/Distance"
        android:layout_gravity="center_horizontal"
        android:max="50"
        android:progress="1"
        android:clickable="true"
        android:progressTint="#4ABC96"
        android:thumbTint="#4ABC96" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Miles"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnShowLocation"
            android:background="#000e556e"
            android:src="@mipmap/take_me_there"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickNext"
           />
    </LinearLayout>


</LinearLayout>